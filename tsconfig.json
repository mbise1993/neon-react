{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "lib": ["dom", "es2017"],
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src"]
}
